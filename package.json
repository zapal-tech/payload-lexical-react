{
  "name": "@zapal/payload-lexical-react",
  "version": "1.1.0",
  "description": "Payload CMS rich text Lexical editor to React JSX renderer",
  "private": false,
  "author": {
    "name": "Zapal",
    "email": "hello@zapal.tech",
    "url": "https://www.zapal.tech"
  },
  "license": "MIT",
  "keywords": [
    "payload",
    "cms",
    "richtext",
    "lexical",
    "render",
    "ssr",
    "react",
    "html",
    "zapal",
    "zapal-tech"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zapal-tech/payload-lexical-react.git"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/payload-lexical-react.es.js",
      "require": "./dist/dist/payload-lexical-react.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:types": "tsc",
    "prepare": "node scripts/prepare",
    "prepublishOnly": "pnpm build",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,json,json5,html,gql,graphql,md,css,scss}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "lexical": "^0.15.0",
    "react": "^19 || >19.0.0-rc",
    "react-dom": "^19 || >19.0.0-rc"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@lexical/list": "^0.15.0",
    "@lexical/rich-text": "^0.15.0",
    "@payloadcms/richtext-lexical": "3.0.0-beta.34",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/node": "^20.12.13",
    "@types/react": "npm:types-react@beta",
    "@types/react-dom": "npm:types-react-dom@beta",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/ui": "^1.6.0",
    "babel-plugin-react-compiler": "0.0.0-experimental-487cb0e-20240529",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lexical": "^0.15.0",
    "lint-staged": "^15.2.5",
    "payload": "3.0.0-beta.37",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@beta",
      "@types/react-dom": "npm:types-react-dom@beta"
    }
  }
}
